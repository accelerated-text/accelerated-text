<?xml version="1.0" encoding="UTF-8"?>
<ccg-lexicon name="shop" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:noNamespaceSchemaLocation="../lexicon.xsd">

  <!-- ==============================================================================
       family name:         nnp.product
       pos:                 NNP
       description:         The product on the shop
       example parse:       Nike1
       ============================================================================ -->
  <family name="Product" pos="NNP">
    <entry name="Primary">
      <atomcat type="nnp">
        <fs id="2">
          <feat attr="index">
            <lf> <nomvar name="P"/> </lf>
          </feat>

          <feat attr="design">
            <featvar name="DESIGN:garment"/>
          </feat>

        </fs>
        <lf>
          <satop nomvar="P:shoe">
            <prop name="[*DEFAULT*]"/>
          </satop>
        </lf>
      </atomcat>
    </entry>
  </family>

  <!-- ==============================================================================
       family name:         np.benefit
       pos:                 NP
       description:         the benefits of the product
       example parse:       comfort, support
       ============================================================================ -->
  <family name="Benefits" pos="NP">
    <entry name="Primary">
      <atomcat type="np">
        <fs id="3">
          <feat attr="index">
            <lf> <nomvar name="B"/> </lf>
          </feat>
        </fs>
        <lf>
          <satop nomvar="B:benefit">
            <prop name="[*DEFAULT*]"/>
          </satop>
        </lf>
      </atomcat>
    </entry>
  </family>

  <!-- ==============================================================================
       family name:         v.provide
       pos:                 V
       entry "npp.product": (s\nnp)/np
       description:         what product provides
       example memeber:     gives, provides
       example parse:       Nike95 provides comfort and support
       ============================================================================ -->
  <family name="v.provide" pos="V" closed="false">
    <entry name="Primary">
      <complexcat>
        <atomcat type="s">
          <fs id="1">
            <feat attr="index">
              <lf> <nomvar name="E"/> </lf>
            </feat>
          </fs>
        </atomcat>
        <slash mode="*" dir="\"/>
        <atomcat type="nnp">
          <fs id="2">
            <feat attr="index">
              <lf>
                <nomvar name="X"/>
              </lf>
            </feat>
          </fs>
        </atomcat>
        <slash mode="&gt;" dir="/"/>
        <atomcat type="np">
          <fs id="3">
            <feat attr="index">
              <lf>
                <nomvar name="Y"/>
              </lf>
            </feat>
          </fs>
        </atomcat>
        <lf>
          <satop nomvar="E">
            <prop name="[*DEFAULT*]"/>
            <diamond mode="Thing">
              <nomvar name="X"/>
            </diamond>
            <diamond mode="Benefit">
              <nomvar name="Y"/>
            </diamond>
          </satop>
        </lf>
      </complexcat>
    </entry>
  </family>

  <!-- ==============================================================================
       family name:         coord.objects
       pos:                NP
       Entry "np.benefit": np/*np
       description:        join provided things with 'and'
       Example Memeber:    and
       Example Parse:      comfort and support
       ============================================================================ -->
  <family name="coord.objects" pos="Conj" closed="true">
    <entry name="NP-Collective" stem="and">
      <complexcat>
        <atomcat type="np">
          <fs>
            <feat val="pl" attr="num"/>
            <feat attr="index">
              <lf>
                <nomvar name="X0"/>
              </lf>
            </feat>
          </fs>
        </atomcat>
        <slash mode="*" dir="\"/>
        <atomcat type="np">
          <fs>
            <feat attr="index">
              <lf>
                <nomvar name="X1"/>
              </lf>
            </feat>
          </fs>
        </atomcat>
        <slash mode="." dir="/"/>
        <atomcat type="np">
          <fs>
            <feat attr="index">
              <lf>
                <nomvar name="X2"/>
              </lf>
            </feat>
          </fs>
        </atomcat>
        <lf>
          <satop nomvar="X0">
            <prop name="and"/>
            <diamond mode="First">
              <nomvar name="L1"/>
              <prop name="elem"/>
              <diamond mode="Item">
                <nomvar name="X1"/>
              </diamond>
              <diamond mode="Next">
                <nomvar name="L2"/>
                <prop name="elem"/>
                <diamond mode="Item">
                  <nomvar name="X2"/>
                </diamond>
              </diamond>
            </diamond>
          </satop>
        </lf>
      </complexcat>
    </entry>
  </family>

  <!-- ==============================================================================
       family name:     adj.redesigned
       pos:             ADJ
       Entry "adj.property" : nnp/*nnp
       description:     Adjectival modifications with product modification
       Example Memeber: redesigned
       Example Parse:   the (redesigned) Nike1
       ============================================================================ -->
  <family pos="ADJ" closed="true" name="adj.redesign">
    <entry name="adj.full">
      <complexcat>
        <atomcat type="nnp">
          <fs inheritsFrom="1">
            <feat attr="index">
              <lf>
                <nomvar name="T" />
              </lf>
            </feat>
          </fs>
        </atomcat>
        <slash mode="*" dir="/" />
        <atomcat type="nnp">
          <fs id="1">
            <feat attr="design" val="redesign"/>
            <feat attr="index">
              <lf>
                <nomvar name="T" />
              </lf>
            </feat>
          </fs>
        </atomcat>
        <lf>
          <satop nomvar="U:shoe-modifier">
            <diamond mode="concrete">
              <prop name="true"/>
            </diamond>
            <diamond mode="domain">
              <nomvar name="T"/>
            </diamond>
            <diamond mode="attribute">
              <nomvar name="P:redesign" />
              <prop name="[*DEFAULT*]" />
              <diamond mode="concrete">
                <prop name="true"/>
              </diamond>
            </diamond>
          </satop>
        </lf>
      </complexcat>
    </entry>
    <member stem="redesign" />
  </family>


  <!-- ==============================================================================
    family name:     adj.benefit
    pos:             ADJ
    entry "np.benefit": n/*n
    description:     Adjectival modifications with color
    example member: durable
    example parse:   (durable) comfort
    ============================================================================ -->
  <family pos="ADJ" closed="true" name="adj.benefit">
    <entry name="adj.full">
      <complexcat>
        <atomcat type="np">
          <fs inheritsFrom="1">
            <feat attr="index">
              <lf>
                <nomvar name="T" />
              </lf>
            </feat>
          </fs>
        </atomcat>
        <slash mode="*" dir="/" />
        <atomcat type="np">
          <fs id="1">
            <feat attr="index">
              <lf>
                <nomvar name="T" />
              </lf>
            </feat>
          </fs>
        </atomcat>
        <lf>
          <satop nomvar="U">
            <diamond mode="concrete">
              <prop name="true"/>
            </diamond>
            <diamond mode="gum-domain">
              <nomvar name="T"/>
            </diamond>
            <diamond mode="gum-attribute">
              <nomvar name="P:gum-Color" />
              <prop name="[*DEFAULT*]" />
              <diamond mode="concrete">
                <prop name="true"/>
              </diamond>
            </diamond>
          </satop>
        </lf>
      </complexcat>
    </entry>
    <member stem="durable"/>
    <member stem="lasting"/>
  </family>
</ccg-lexicon>
