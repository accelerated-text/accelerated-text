files:
    include:        'packages/**/*.s+(a|c)ss'
rules:
    class-name-format:
        - 4
        -
            allow-leading-underscore:   false
            convention:                 camelcase
    indentation:
        - 4
        - { size: 4 }

    nesting-depth:
        - 2
        - { max-depth: 3 }

    space-between-parens:
        - 4
        - { include: true }
