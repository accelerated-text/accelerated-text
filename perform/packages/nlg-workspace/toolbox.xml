<xml style="display: none">
    <category name="Document">
        <block type="Segment">
            <field name="text_type">description</field>
        </block>
        <block type="Segment">
            <field name="text_type">pitch</field>
        </block>
        <block type="Define-var" />
    </category>
    <category name="Topics">
        <block type="Product" />
        <block type="Product-component" />
    </category>
    <category name="Rhetoric">
        <block type="RST" />
        <block type="Rhetorical">
            <field name="rstType">summary</field>
        </block>
        <block type="Rhetorical">
            <field name="rstType">explanation</field>
        </block>
        <block type="Rhetorical">
            <field name="rstType">elaboration</field>
        </block>
        <block type="Relationship">
            <field name="relationshipType">provides</field>
        </block>
        <block type="Relationship">
            <field name="relationshipType">consequence</field>
        </block>
    </category>
    <category name="Lists">
        <block type="Sequence" />
        <block type="Shuffle" />
        <block type="One-of-synonyms" />
    </category>
    <category name="Values">
        <block type="Cell" />
        <block type="Quote" />
        <block type="Get-var" />
        <block type="Lexicon" />
    </category>
    <category name="Logic">
        <block type="If-then-else" />
        <block type="And-or">
            <field name="operator">and</field>
        </block>
        <block type="And-or">
            <field name="operator">or</field>
        </block>
        <block type="Xor" />
        <block type="Not" />
    </category>
    <category name="Checks">
        <block type="Value-comparison">
            <field name="operator">=</field>
        </block>
        <block type="Value-comparison">
            <field name="operator">&gt;</field>
        </block>
        <block type="Value-in" />
    </category>
