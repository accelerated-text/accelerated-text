{:scalars
 {:BigInt
  {:parse     :big-int-parser
   :serialize :big-int-serializer}}

 :objects
 {:item
  {:fields {:createdAt {:type BigInt}
            :updatedAt {:type BigInt}
            :synonyms  {:type (list String)}
            :key       {:type String}}}

  :lexicon
  {:fields {:offset     {:type Int}
            :totalCount {:type Int}
            :limit      {:type Int}
            :items      {:type (list :item)}}}}

 :queries
 {:lexicon {:type    :lexicon
            :args    {:query  {:type String}
                      :limit  {:type String}
                      :offset {:type String}}
            :resolve :get-lexicon}}}
