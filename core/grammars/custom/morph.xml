<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE doc [
<!ENTITY gen SYSTEM "gen-morph.xml">
]>

<morph name="shop" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../morph.xsd">

  &gen;
  <entry pos="V" word="provides" stem="benefit" class="purpose"/>
  <entry pos="V" word="offers" stem="benefit" class="purpose"/>
  <entry pos="V" word="gives" stem="benefit" class="purpose"/>

  <entry pos="NNP" word="Nike1" stem="nike1" class="shoe" macros="@new"/>
  <entry pos="NNP" word="Nike2" stem="nike2" class="shoe" macros="@new"/>
  <entry pos="NNP" word="Nike3" stem="nike3" class="shoe" macros="@new"/>
  <entry pos="NNP" word="Nike4" stem="nike4" class="redesigned-shoe" macros="@redesign"/>

  <entry pos="ADJ" word="durable"/>
  <entry pos="ADJ" word="lasting"/>

  <entry pos="NP" word="comfort" class="benefit"/>
  <entry pos="NP" word="support" class="benefit"/>

  <entry pos="ADJ" word="redesigned" stem="redesign"/>

  <entry pos="Conj" word="and" stem="and"/>
  <entry pos="Conj" word="," stem="and"/>

  <macro name="@redesign">
    <fs val="redesign" attr="design" id="2"/>
  </macro>
  <macro name="@new">
    <fs val="new" attr="design" id="2"/>
  </macro>
</morph>
